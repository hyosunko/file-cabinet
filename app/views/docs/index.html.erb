<div class="wrapper_with_padding">
  <div id="docs" class="clearfix">
    <% if @docs.any? %>
      <% @docs.each do |doc| %>
        <%= link_to(doc) do %>
          <div class="doc">
            <p class="title"><%= doc.title %></p>
            <p class="date"><%= time_ago_in_words(doc.created_at) %></p>
            <p class="content"><%= truncate(doc.content, length: 80) %></p>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <h2> Create Doc!</h2>
      <p> Start Creating Documents and Organizing your life!</p>
      <%= link_to  "Create Doc", new_doc_path, class: "button" %>
    <% end %>
  </div>  
</div>  
